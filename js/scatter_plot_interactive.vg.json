{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/HashimMufti/FIT3179/main/data/post_edit.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "iyear",
      "type": "quantitative",
      "title": "Year",
      "axis": {"tickCount": 7},
      "scale": {"type": "time", "domain": [2000, 2020]}
    },
    "y": {
      "field": "nkill",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [1, 500]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "country_txt", "type": "nominal"},
          {"field": "nkill", "type": "quantitative", "format": ","},
          {"field": "Active", "type": "quantitative", "format": ","},
          {"field": "Deaths", "type": "quantitative", "format": ","},
          {"field": "Recovered", "type": "quantitative", "format": ","},
          {
            "field": "Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "country_txt", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['country_txt'] == 'China' || datum['country_txt'] == 'Singapore' || datum['country_txt'] == 'Australia' || datum['country_txt'] == 'New Zealand' || datum['country_txt'] == 'Italy' || datum['country_txt'] == 'Yemen' ||  datum['country_txt'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "country_txt", "type": "nominal"},
          {"field": "nkill", "type": "quantitative", "format": ","},
          {"field": "iyear", "type": "quantitative", "format": ","},
          {
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}